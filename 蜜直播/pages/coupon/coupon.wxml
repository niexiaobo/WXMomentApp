<view class='homepage'>

<view class="blank"></view>
<view class="coupon-list">
  <block wx:for="{{list}}">

    <view class="coupitem stamp {{item.class}} " bindtap='addcoupon'data-model='{{item}}'>
        <!-- 左侧 -->
        <view class="float-li t1">
            <view class="coupon-left">
                <view class="coupt coupon1">￥</view>
                <view class="coupt coupon2">{{item.sell}}</view>
                <view class="coupt coupon3">{{item.title}}</view>
                <view class="coupt coupon4">优惠券编号：{{item.numberid}}</view>
            </view>
        </view>
        <!-- 右侧 -->
        <view class="float-li-rig">
            <view class="coupon-rig" >
               <view class="coupon1 coupt">优惠券</view>
               <view class="coupon2 coupt">{{item.startday}}</view>
               <view class="coupon2 coupt">{{item.endday}}</view>
               <view class="coupon3 coupt"><text>{{item.statename}}</text></view>
            </view>
        </view>
        <i></i>
    </view>
    
    
  </block>
</view>
<view class="blank"></view>
<view class="box note">
    <view>优惠券使用方式：</view>
    <view>1、领取优惠券</view>
    <view>2、点击结算时勾选使用优惠券</view>
    <view>3、提交订单、付款，订单完成</view>
</view>
 
<!-- 浮窗 底部-->
<template is="menu-footer" data="{{nav: footNav}}"/>


</view>

